{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": "./src"
  },
  "include": ["src/api/**/*", "src/database/**/*", "src/types/**/*"]
}
